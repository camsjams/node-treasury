# editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.json, *.svg}]
indent_style = space
indent_size = 2

# Matches the exact package.json, *.scss, *.css, or *.yml
[{package.json,*.yml,*.yaml,*.scss,*.css,*rc, *snyk}]
indent_style = space
indent_size = 2
